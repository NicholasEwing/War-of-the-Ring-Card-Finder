<!DOCTYPE html>
<html>
  <head>
    <title>Card Generator</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div>
	    <form action="/" method="GET">
	    	<input type="text" name="search">
	    	<button type="submit">Submit</button>
	    </form>
	</div>
		<% if(card === null) { %>
			<h1>No card found!</h1>
		<% } else { %>
	    	<div class="card <%= card.faction %>-<%= card.cardSize %>">
		    	<h1 class="event-title"><%= card.eventTitle %></h1>
	    		<div class="event-box-<%= card.faction %>">

		    		<% if(card.precondition) { %>
		    			<p class="event-precondition"><%= card.precondition %></p>
		    		<% } %>

		    		<p class="event-text"><%= card.eventText %></p>
		    		
		    		<% if(card.specialHuntTileImg) {  %>
		    			<img class="special-hunt-tile-img" src="<%= card.specialHuntTileImg %>">
		    		<% } %>

		    		<% if(card.discardCondition) { %>
		    			<p class="discard-condition"><%= card.discardCondition %></p>
		    		<% } %>
		    	</div>

	    		<div class="combat-box-<%= card.faction %> box-<%= card.cardSize %>">
		    		<h1 class="combat-title"><%= card.combatTitle%></h1>
		    		
		    		<% if(card.combatPrecondition) { %>
		    			<p class="combat-precondition"><%= card.combatPrecondition %></p>
		    		<% } %>

		    		<p class="combat-text"><%= card.combatText %></p>
	    		</div>

	    		<p class="initiative-number"><%= card.initiativeNumber %></p>

	    		<p class="card-number"><%= card.cardNumber %></p>
	    		
	    	</div>
	    <% } %>
    <a href="/create">Create Card</a>
   <script type="text/javascript" src="/javascripts/script.js"></script>
  </body>
</html>
